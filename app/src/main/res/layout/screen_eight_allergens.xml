<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/our_activity_horizontal_margin"
    android:layout_margin="@dimen/our_activity_horizontal_margin"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_list_tools"
        android:padding="@dimen/our_activity_horizontal_margin"
        android:layout_above="@+id/separator">
        <ScrollView
            android:layout_marginTop="65dp"
            android:id="@+id/countryList"
            style="@style/scrollbar_shape_style"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>



    <android.support.v4.widget.Space
        android:id="@+id/separator"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <ImageButton
        android:background="@drawable/check_mark_green"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignRight="@+id/separator"
        android:layout_alignBottom="@+id/separator"/>

    <ImageButton
        android:background="@drawable/icon_exit"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/separator"
        android:layout_alignBottom="@+id/separator"/>

</RelativeLayout>