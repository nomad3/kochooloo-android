<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popUpHolder"
    android:layout_width="320dp"
    android:visibility="gone"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/our_activity_horizontal_margin"
        android:layout_above="@+id/space"
        android:background="@drawable/speach_bubble_down_new"
        android:layout_alignRight="@+id/space">

        <com.xtronlabs.koochooloo.view.KoochoolooLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblPopUpBubble"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark" />

    </ScrollView>



    <android.support.v4.widget.Space
        android:id="@+id/space"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_centerVertical="true" />


    <ImageView
        android:id="@+id/imgPopUpKoochooloo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space"
        android:src="@drawable/chef_character_see_through_background" />


    <ImageButton
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/imgPopUpClose"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imgPopUpKoochooloo"
        android:background="@drawable/check_mark_green"/>

</RelativeLayout>